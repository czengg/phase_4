<h1>Listing tournaments</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Date of birth</th>
    <th>Phone</th>
    <th>Rank</th>
    <th>Active</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tournaments.each do |tournament| %>
  <tr>
    <td><%= tournament.first_name %></td>
    <td><%= tournament.last_name %></td>
    <td><%= tournament.date_of_birth %></td>
    <td><%= tournament.phone %></td>
    <td><%= tournament.rank %></td>
    <td><%= tournament.active %></td>
    <td><%= link_to 'Show', tournament %></td>
    <td><%= link_to 'Edit', edit_tournament_path(tournament) %></td>
    <td><%= link_to 'Destroy', tournament, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

